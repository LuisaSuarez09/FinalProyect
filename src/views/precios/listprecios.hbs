<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-upercase p-2"> Lista de Precios de Promoción</h3>

        {{#if precios}}

        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col" class="col-4">Nombre        </th>
                    <th scope="col">Precio                      </th>
                    <th scope="col">Tiempo                      </th>
                    <th scope="col">Descripcion                     </th>
                    <th scope="col">Acciones                        </th>
                    
                </tr>
            </thead>

            <tbody>

                {{#each precios}}
                <tr>
                    <td>{{nameplan}}</td>
                    <td>{{precioplan}}</td>
                    <td>{{timeplan}}</td>
                    <td>{{descripcion}}</td>
                    <td>
                    
                        <div class="btn-grow">
                            <a href="/editprecios/{{id}}" class="btn btn-warning p-2">
                                <i class="fa-solid fa-pencil"></i>

                            </a>
                            <a href="/deleteprecios/{{id}}" class="btn btn-danger p-2">
                                <i class="fa-solid fa-trash"></i>

                            </a>
                        </div>
                    </td>
                </tr>

                {{/each}}

            </tbody>
        </table>

        {{else}}
        
        <div class="card text-center mx-auto">
            <div class="card-header">
                <h3>REGISTRAR PROMOCIÓN </h3>

            </div>
            <div class="card-body">
                <p>Presiona este boton para que puedas registrar una Promoción</p>
                <a href="/addprecios/{{id}}" class="btn btn-dark"> Registrar</a>
            </div>
        </div>


        {{/if}}
    </div>
</div>