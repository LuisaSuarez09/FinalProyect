<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-upercase p-2"> Lista de Precios</h3>

        {{#if precios}}

        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col" class="col-4">Nombre del Producto         </th>
                    <th scope="col">Precio del Producto                       </th>
                    <th scope="col">Tiempo de Promoci√≥n                       </th>
                    <th scope="col">Descripcion del Combo                     </th>
                    <th scope="col">Acciones                                   </th>
                    
                </tr>
            </thead>

            <tbody>

                {{#each productos}}
                <tr>
                    <td>{{nameplan}}</td>
                    <td>{{precioplan}}</td>
                    <td>{{timeplan}}</td>
                    <td>{{timeplan}}</td>
                    <td>
                    
                        <div class="btn-grow">
                            <a href="/editprecios/{{id}}" class="btn btn-warning p-2">
                                <i class="fa-solid fa-pencil"></i>

                            </a>
                            <a href="/deleteprecios/{{id}}" class="btn btn-danger p-2">
                                <i class="fa-solid fa-trash"></i>

                            </a>
                        </div>
                    </td>
                </tr>

                {{/each}}

            </tbody>
        </table>

        {{else}}
        
        <div class="card text-center mx-auto">
            <div class="card-header">
                <h3>Debes colocar un Precio </h3>

            </div>
            <div class="card body">
                <p>Presiona este boton para que puedas registrar un precio</p>
                <a href="/addprecios" class="btn-btn-primary"></a>

            </div>
        </div>


        {{/if}}
    </div>
</div>