<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Añadir Promoción</h3>

                </div> 
                <div class="card-body">
                    <form action="/addprecios" method="post">
                    <div class="input-group mt-2">
                        <label for="nameplan" class="input-group-text">Nombre</label>
                        <input class="form-control" type="text" name="nameplan" id="nameplan" placeholder="Ejemplo: Premium" autofocus required>
                    </div>

                    <div class="input-group mt-2">
                        <label for="precioplan" class="input-group-text">Precio</label>
                        <input class="form-control" type="text" name="precioplan" id="precioplan" placeholder="Ejemplo: $14.200" autofocus required>
                    </div>

                    <div class="input-group mt-2">
                        <label for="timeplan" class="input-group-text">Tiempo</label>
                        <input class="form-control" type="number" name="timeplan" id="timeplan" placeholder="Ejemplo: 1 mes" autofocus required>
                    </div>

                    <div class="input-group mt-2">
                        <label for="descripcion" class="input-group-text">Descripcion</label>
                        <input class="form-control" type="text" name="descripcion" id="descripcion" placeholder="Ejemplo: Un americo con un Hummous" autofocus required>
                    </div>

                    <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Ordenar</button>
                    </div>
                    
                    
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>