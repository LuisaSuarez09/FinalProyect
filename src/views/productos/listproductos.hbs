<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de Productos</h3>
        
        {{#if productos}} 

        <table class="table text-center"> 
            <thead>
                <tr class="table-dark">
                    <th scope="col" class="col-4">Nombre Producto          </th>
                    <th scope="col">Descripcion del Producto </th>
                    <th scope="col">Imagen                   </th>
                    <th scope="col">Acciones                 </th>
                    
                </tr>
            </thead>

            <tbody>

                {{#each productos}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{descripction}}</td>

                    
                    <td><img src="/uploads/{{imagen}}" class="card-img-top mx-auto m-2 rounded-circle" style="width: 150px; height: 150px; display: block;"></td>
                    <td>
                    
                        <div class="btn-grow">
                            <a href="/editproductos/{{id}}" class="btn btn-warning p-2">
                                <i class="fa-solid fa-pencil"></i>

                            </a>
                            <a href="/deleteproductos/{{id}}" class="btn btn-danger p-2">
                                <i class="fa-solid fa-trash"></i>

                            </a>
                        </div>
                    </td>
                </tr>

                {{/each}}

            </tbody>
        </table>



        {{else}}
        
        <div class="card text-center mx-auto">
            <div class="card-header">
                <h3>Producto Nuevo</h3>

            </div>
            <div class="card-body">
                <p>Presiona este boton para que puedas registrar un Nuevo Producto</p>
                <a href="/addproductos/{{id}}" class="btn btn-primary"> Ir a Ordenar</a>
            </div>
        </div>

        {{/if}}
    

    
    </div>
</div>